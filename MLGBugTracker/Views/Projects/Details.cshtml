@model MLGBugTracker.Models.Projects

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Projects</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            Project Users
        </dt>
        <dd>
            @foreach(var users in Model.Users)
            {
                <p>@users.FirstName @users.LastName</p>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Add a Ticket", "Create", "Tickets", new { projectId = Model.Id }, null)
    @Html.ActionLink("Assign PM", "AssignPM", new { Id = Model.Id }) |
    @Html.ActionLink("Add Developers", "AssignDEV", new { projectId = Model.Id }) |


</p>
